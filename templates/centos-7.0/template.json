{
  "description": "CentOS 7.0 64-bit (amd64/x86_64)",

  "variables": {
    "template_name": "centos-7.0-x64",
    "template_os": "RedHat_64",

    "iso_url": "http://bay.uchicago.edu/centos-vault/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-DVD.iso",
    "iso_checksum": "ee505335bcd4943ffc7e6e6e55e5aaa8da09710b6ceecda82a5619342f1d24d9",
    "iso_checksum_type": "sha256",

    "memory_size": "512",
    "cpu_count": "1",
    "disk_size": "10240",

    "purpose": "puppet",

    "puppet_pkg": "puppetlabs-release-pc1-el-7.noarch.rpm",
    "puppet_agent_ver": "1.5.3",
    "puppet_module_path": "/tmp/packer-puppet-masterless/manifests/modules",
    "puppet_modules": "puppetlabs-stdlib saz-sudo"

  },

  "builders": [
    {
      "name": "centos-7.0-x64-puppet",
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> <wait>",
        "text <wait>",
        "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<wait>",
        "<enter>"
      ],
      "boot_wait": "10s",

      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "disk_size": "{{ user `disk_size` }}",

      "guest_os_type": "{{ user `template_os` }}",
      "format": "ovf",
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",

      "headless": true,
      "shutdown_command": "/sbin/halt -h -p",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "{{ user `memory_size` }}"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "{{ user `cpu_count` }}"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--ioapic",
          "on"
        ]
      ]
    }
  ],
  "provisioners" : [
    {
      "type" : "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}' {{ user `puppet_modules` }}",
      "environment_vars": [
        "PUPPET_PKG={{ user `puppet_pkg` }}",
        "PUPPET_VER={{ user `puppet_agent_ver` }}",
        "PUPPET_MODULE_PATH={{ user `puppet_module_path` }}"
      ],
      "scripts": [
        "../../scripts/setup/puppet-yum.sh"
      ]
    },
    {
      "type": "puppet-masterless",
      "execute_command": "cd {{ .WorkingDir }} && {{ .FacterVars }} /opt/puppetlabs/bin/puppet apply --verbose --modulepath='{{ user `puppet_module_path` }}' --hiera_config='{{ .HieraConfigPath }}' --detailed-exitcodes {{ .ManifestFile }}",
      "manifest_file": "../../puppet-data/manifests/site.pp",
      "manifest_dir": "../../puppet-data/manifests",
      "hiera_config_path": "../../puppet-data/hieradata/hiera.yaml"
    },
    {
      "type" : "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}'",
      "environment_vars": [
        "PUPPET_PKG={{ user `puppet_pkg` }}",
        "PUPPET_VER={{ user `puppet_agent_ver` }}",
        "PUPPET_MODULE_PATH={{ user `puppet_module_path` }}"
      ],
      "scripts": [
        "../../scripts/cleanup/os-yum.sh",
        "../../scripts/cleanup/puppet-yum.sh",
        "../../scripts/cleanup/packer.sh",
        "../../scripts/cleanup/disk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "../../boxes/{{user `template_name`}}-{{ user `purpose` }}.box"
    }
  ]
}
